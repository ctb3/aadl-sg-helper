commands:
  01_install_playwright_deps:
    command: |
      # Install essential packages for Playwright
      yum install -y atk atspi libX11 libXcomposite libXdamage libXext libXfixes libXrandr mesa-libgbm libxcb libxkbcommon alsa-lib
      
      # Install Playwright dependencies
      npx playwright install-deps chromium 